<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net8.0;net9.0;net10.0</TargetFrameworks>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>14</LangVersion>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>DateTime Operators</Title>
    <Version>1.1.0</Version>
    <Authors>Marc Jacobi</Authors>
    <Company>Jacobi Software</Company>
    <Description>Operator extensions for DateTime, DateTimeOffset, DateOnly, TimeOnly and TimeSpan.</Description>
    <Copyright>Copyright (c) 2025 Jacobi Software</Copyright>
    <PackageReadmeFile>readme.md</PackageReadmeFile>
    <RepositoryType>git</RepositoryType>
    <PackageTags>DateTime;operators</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/obiwanjacobi/Jacobi.DateTimeOperators</PackageProjectUrl>
    <RepositoryUrl>https://github.com/obiwanjacobi/Jacobi.DateTimeOperators</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\readme.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
